doctype html
html
    head
        include ../head
    body
        include ../navbar
        .container
            .row.col-lg-10.col-lg-offset-1.jumbotron
                h1.text-center= title
            form#login.col-lg-4.col-lg-offset-4(role='form' target='/users/login' method='POST')
                .form-group
                    label.control-label(for='inputEmail') 邮箱
                    input#inputEmail.form-control(type='email' name='email' placeholder='Email address' required=true autofocus=true)
                .form-group
                    label.control-label(for='inputPassword') 密码
                    input#inputPassword.form-control(type='password' name='password' placeholder='Password' required=true)
                .checkbox
                    label
                        input(type='checkbox' name='remember')
                        | 记住我
                .form-group
                    button.btn.btn-primary.btn-block(type='submit') 登录
                .form-group
                    a.btn.btn-block.btn-success(href='/users/register') 注册
            .row
                .col-lg-5.col-lg-offset-4
                    p#message.text-primary.text-center &nbsp;

        script(src='/javascripts/require.js' async='true' defer data-main='/javascripts/users/login.js')

