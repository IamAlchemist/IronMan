script#entry-template(type="text/x-handlebars-template")
    .col-lg-12
        h1 {{title}}
        .col-lg-12  {{body}}

script#list-template(type="text/x-handlebars-template")
    .col-lg-12.
        {{#list people}}{{firstName}} {{lastName}}{{/list}}

script#path-template(type="text/x-handlebars-template")
    .col-lg-12
        h1 {{title}}
        h2 By {{author.name}}
        .col-lg-12  {{body}}

script#exercise-template(type="text/x-handlebars-template").
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>{{title}}</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-8">
                        <h5>{{description}}</h5>
                        <ul class="exercise-list">
                            {{#each options}}
                            <li class="exercise-section">
                                <input id="{{../_id}}_{{@index}}" type="radio" name="{{../_id}}"/>
                                <label for="{{../_id}}_{{@index}}">{{this}}</label>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-lg-4">
                        <div class="row">
                            <div class="col-xs-6 col-xs-offset-3">
                                <button id="showTipsButton" type="button" class="btn btn-warning btn-block">提示</button>
                            </div>
                        </div>
                        <div class="row">
                            <p id="hintMessage"></p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-2">
                        <button id="#okButton" class="btn btn-success btn-block">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </div>