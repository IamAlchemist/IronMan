extends layout

block content
    .container
        .row.col-sm-10.col-sm-offset-1.jumbotron
            h1.text-center= title
        .row
            .col-lg-4.col-lg-offset-4
                p#message.text-primary.text-center &nbsp;
        form#login.col-sm-4.col-sm-offset-4(role='form' target='/users/login' method='POST')
            .form-group
                label.control-label(for='inputEmail') Email
                input#inputEmail.form-control(type='email' name='email' placeholder='Email address' required=true autofocus=true)
            .form-group
                label.control-label(for='inputPassword') Password
                input#inputPassword.form-control(type='password' name='password' placeholder='Password' required=true)
            .checkbox
                label
                    input(type='checkbox' name='remember')
                    | Remember me
            .form-group
                button.btn.btn-primary.btn-block(type='submit') Sign in
            .form-group
                a.btn.btn-block.btn-success(href='/users/register') Sign up

    script(src='/javascripts/require.js' async='true' defer data-main='/javascripts/login.js')

