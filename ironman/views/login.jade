extends layout

block content
    .container
        .row.col-sm-10.col-sm-offset-1.jumbotron
            h1.text-center= title
    form.col-sm-4.col-sm-offset-4(role='form')
        .form-group
            label.control-label(for='inputEmail') Email
            input#inputEmail.form-control(type='email' placeholder='Email address' required=true autofocus=true)
        .form-group
            label.control-label(for='inputPassword') Password
            input#inputPassword.form-control(type='password' placeholder='Password' required=true)
        .checkbox
            label
                input(type='checkbox')
                | Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in


